/*Scanner*/
package 输入输出端;

import java.util.*; //                         1.Scanner方法  的类

public class Input {

	public static void main(String[] args) {

		String i; // s要注意大写;
		int j;
		// char z;键盘读取中无char?只有String(字符串)?
		Scanner sc = new Scanner(System.in);// 2.Scanner固定语句1
		i = sc.next(); // 2.语句2: 变量=sc.next+数据类型()
		j = sc.nextInt();
		// z=sc.nextchar();//错误
		// 3.输出:println:换行,print不换行
		System.out.println("输入的值为:" + i); // 1
		System.out.println("输入的值为:" + i + "和" + j); // 2
		System.out.println("输入的值为:"); // 3
		System.out.println(i);
		System.out.println(j);
		System.out.println("输入的值为:"); // 4
		System.out.print(i);
		System.err.print(j); // err显示红色字体,一般显示错误信息,在控制台 最后或最前 显示!
		// error: System.out.println(i,j);应 将逗号改为加号
		System.out.println("i,j为:" + i + j);
	}

}
